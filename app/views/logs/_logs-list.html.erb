
<% if @logs.length == 0 %>
  <!--Message is displayed if the list is empty -->
  <%= render "components/no-result-found" %>
<% else %>
  <table id="log-table" class="table table-striped table-area">
    <!-- Table Header -->
    <tr>
      <th></th>
      <th>Code</th>
      <th>Title</th>
      <th>Type</th>
      <th>Stage</th>
      <th>Milestone</th>
      <th>Value</th>
      <th>Status</th>
      <th>Owner</th>
    </tr>
    <!-- Table data -->
    <% @logs.each do |log| %>
    <tr>
      <td>
        <ul class="list-inline product-controls hidden-sm hidden-xs">
          <li>
            <%= link_to edit_log_path(log) do %>
              <i class="fa fa-pencil"> </i>
            <% end %>
          </li>
          <li>
            <%= link_to log_path(log), method: :delete do %>
              <i class="fa fa-trash"> </i>
            <% end %>
          </li>
        </ul>
      </td>
      <td><%= log.code  %></td>
      <td><%= log.label %></td>
      <td><%= log.log_type.label %></td>
      <td><%= log.log_stage.label %></td>
      <td><%= log.milestone.label %></td>
      <td><%= log.log_added_value.label %></td>
      <td><%= log.log_status.label %></td>
      <td><%= log.owner.alias %></td>
    </tr>

    <% end %>
  </table>
<% end %>


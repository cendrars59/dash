 <%= search_form_for @search do |f| %>

   <div class="form-group spacing-search">
     <%= f.label :code_or_label_cont, "Entry" %>
   </div>
   <div class="form-group spacing-search">
      <%= f.text_field :code_or_label_cont %>
   </div>
   <div class="form-group spacing-search">
      <%= f.label "Type" %>
   </div>
   <div class="form-group spacing-search">
      <%= f.select :log_type_id_eq,options_from_collection_for_select(@selectable_types,"id","label"),include_blank: true %>
   </div>
   <div class="form-group spacing-search">
      <%= f.label "Status" %>
   </div>
   <div class="form-group spacing-search">
      <%= f.select :log_status_id_eq,options_from_collection_for_select(@selectable_status,"id","label"),include_blank: true %>
   </div>
   <div class="form-group spacing-search">
      <%= f.label "Stage" %>
   </div>
   <div class="form-group spacing-search">
      <%= f.select :log_stage_id_eq,options_from_collection_for_select(@selectable_stages,"id","label"), include_blank: true %>
   </div>
   <div class="form-group spacing-search">
      <%= f.label "Milestone" %>
   </div>
   <div class="form-group spacing-search">
      <%= f.select :milestone_id_eq,options_from_collection_for_select(@selectable_milestones,"id","label"), include_blank: true %>
   </div>

   <div class="form-group spacing-search">
       <%= f.submit "Search",class: "btn btn-primary button-features" %>
   </div>

 <% end %>
